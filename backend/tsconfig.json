{
  "compilerOptions": {
    "moduleResolution": "node", // Pour permettre la résolution des modules dans node_modules
    "esModuleInterop": true,     // Pour interopérer avec les modules CommonJS comme bcrypt
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,   // (optionnel) si vous travaillez avec des fichiers JSON
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "@types/**/*.d.ts" // Assurez-vous d'inclure ce chemin
  ],     // Assurez-vous que tous les fichiers source sont inclus
  "exclude": ["node_modules"]     // Exclure node_modules de la compilation
}
